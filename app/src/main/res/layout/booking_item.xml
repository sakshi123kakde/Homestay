<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Other TextViews for name, email, phone, city, spinners, and dates -->
        <TextView
            android:id="@+id/nametxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titletxt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nametxt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/phonetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailtxt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/citytxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phonetxt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/spinner1txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spinner 1"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/citytxt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/spinner2txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spinner 2"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner1txt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/spinner3txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spinner 3"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner2txt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/checkInDatetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Check-In Date"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner3txt"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/checkOutDatetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Check-Out Date"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkInDatetxt"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corner_btn2"
            android:padding="10dp"
            android:text="Accept"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkOutDatetxt" />

        <Button
            android:id="@+id/rejectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corner_btn2"
            android:padding="10dp"
            android:text="Reject"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkOutDatetxt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>